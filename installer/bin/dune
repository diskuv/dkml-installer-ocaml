(rule
 (targets create_installers.ml package_setup.ml package_uninstaller.ml)
 (action
  (progn
   ; in real code: (run ml-of-installer-generator)
   (run ../../dunify/ml-generator/main.exe))))

(rule
 (target dune.inc)
 (deps create_installers.ml package_setup.ml package_uninstaller.ml)
 (mode promote)
 (action
  (progn
   ; in real code: (run dune-of-installer-generator)
   (run
    ../../dunify/dune-generator/main.exe
    --project-root
    %{project_root}
    %{target}))))

(include dune.inc)
