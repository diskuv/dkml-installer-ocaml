(rule
 (targets
  create_installers.ml
  discover.ml
  entry_assembly_manifest.ml
  entry_main.ml
  entry-application.manifest
  package_setup.ml
  package_uninstaller.ml
  runner_admin.ml
  runner_user.ml)
 (action
  (progn
   ; in real code: (run ml-of-installer-generator)
   (run ../../dunify/ml-generator/main.exe))))

(rule
 (target dune.inc)
 (deps
  create_installers.ml
  discover.ml
  entry_assembly_manifest.ml
  entry_main.ml
  entry-application.manifest
  package_setup.ml
  package_uninstaller.ml
  runner_admin.ml
  runner_user.ml)
 (mode promote)
 (action
  (progn
   ; in real code: (run dune-of-installer-generator)
   (run
    ../../dunify/dune-generator/main.exe
    --project-root
    %{project_root}
    %{target}))))

(include dune.inc)
