(rule
 (targets
  create_installers.ml
  discover.ml
  entry_assembly_manifest.ml
  entry_install.ml
  entry_uninstall.ml
  entry-application.manifest
  package_setup.ml
  package_uninstaller.ml
  runner_admin.ml
  runner_user.ml)
 (action
  (progn
   (run ml-of-installer-generator))))

(rule
 (alias gen-dkml)
 (target dune.gen.inc)
 (deps
  create_installers.ml
  discover.ml
  entry_assembly_manifest.ml
  entry_install.ml
  entry_uninstall.ml
  entry-application.manifest
  package_setup.ml
  package_uninstaller.ml
  runner_admin.ml
  runner_user.ml)
 (action
  (progn
   (run
    dune-of-installer-generator
    --package-name
    dkml-installer-network-ocaml
    --project-root
    %{project_root}
    %{target}))))

(rule
  (alias gen-dkml)
  (action
    (diff dune.inc dune.gen.inc)))

(include dune.inc)
